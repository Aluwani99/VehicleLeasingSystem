<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Rosond Vehicle Leasing</title>

    <!-- Bootstrap 5 CSS -->
    @Styles.Render("~/Content/css")

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <!-- Custom CSS -->
    <style>
        :root {
            --primary: #4e73df;
            --secondary: #858796;
            --success: #1cc88a;
            --info: #36b9cc;
            --warning: #f6c23e;
            --danger: #e74a3b;
            --light: #f8f9fc;
            --dark: #5a5c69;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fc;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .navbar {
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
            background: linear-gradient(135deg, #2c3e50, #1a2a3a) !important;
        }

        .navbar-brand {
            font-weight: 700;
            letter-spacing: 0.5px;
        }

        .nav-link {
            font-weight: 500;
            padding: 0.5rem 1rem !important;
            border-radius: 0.25rem;
            transition: all 0.3s ease;
        }

            .nav-link:hover {
                background-color: rgba(255, 255, 255, 0.1);
            }

        .active-nav {
            background-color: var(--primary);
        }

        .main-content {
            flex: 1;
            padding-top: 1.5rem;
            padding-bottom: 3rem;
        }

        footer {
            background-color: #2c3e50;
            color: white;
            padding: 1.5rem 0;
            margin-top: auto;
        }

        .sidebar {
            background: linear-gradient(180deg, #4e73df 10%, #224abe 100%);
            min-height: 100vh;
        }

            .sidebar .nav-link {
                color: rgba(255, 255, 255, 0.8);
                margin-bottom: 0.5rem;
            }

                .sidebar .nav-link:hover {
                    color: #fff;
                    background-color: rgba(255, 255, 255, 0.1);
                }

                .sidebar .nav-link i {
                    margin-right: 0.5rem;
                }

        .sidebar-heading {
            padding: 0.875rem 1.25rem;
            font-size: 0.75rem;
            color: rgba(255, 255, 255, 0.4);
            text-transform: uppercase;
            letter-spacing: 0.13em;
            font-weight: 700;
        }

        .card {
            border: none;
            border-radius: 0.35rem;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 0.5rem 1.5rem 0 rgba(58, 59, 69, 0.2);
            }

        .page-header {
            border-bottom: 1px solid #e3e6f0;
            padding-bottom: 1rem;
            margin-bottom: 2rem;
        }
    </style>

    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar d-none d-md-flex flex-column flex-shrink-0 p-3" style="width: 280px;">
            <a href="@Url.Action("Index", "Home")" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                <i class="bi bi-car-front-fill fs-4 me-2"></i>
                <span class="fs-4">Rosond Leasing</span>
            </a>
            <hr>
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a href="@Url.Action("Index", "Home")" class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active-nav" : "")">
                        <i class="bi bi-speedometer2"></i>
                        Dashboard
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("VehicleReport", "Home")" class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "VehicleReport" ? "active-nav" : "")">
                        <i class="bi bi-bar-chart-line"></i>
                        Fleet Report
                    </a>
                </li>
                <li class="sidebar-heading">Management</li>
                <li>
                    <a href="@Url.Action("Index", "Vehicle")" class="nav-link">
                        <i class="bi bi-truck"></i>
                        Vehicles
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Client")" class="nav-link">
                        <i class="bi bi-people-fill"></i>
                        Clients
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Supplier")" class="nav-link">
                        <i class="bi bi-box-seam"></i>
                        Suppliers
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Branch")" class="nav-link">
                        <i class="bi bi-building"></i>
                        Branches
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Driver")" class="nav-link">
                        <i class="bi bi-person-badge"></i>
                        Drivers
                    </a>
                </li>
            </ul>
            <hr>
            <div class="dropdown">
                <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="bi bi-person-circle fs-4 me-2"></i>
                    <strong>Admin</strong>
                </a>
                <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
                    <li><a class="dropdown-item" href="#"><i class="bi bi-person me-2"></i>Profile</a></li>
                    <li><a class="dropdown-item" href="#"><i class="bi bi-gear me-2"></i>Settings</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="#"><i class="bi bi-box-arrow-right me-2"></i>Sign out</a></li>
                </ul>
            </div>
        </div>

        <!-- Main Content -->
        <div class="flex-grow-1">
            <!-- Top Navigation -->
            <nav class="navbar navbar-expand navbar-dark bg-dark d-md-none">
                <div class="container-fluid">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mobileNavbar">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <a class="navbar-brand" href="@Url.Action("Index", "Home")">Rosond Leasing</a>
                    <div class="collapse navbar-collapse" id="mobileNavbar">
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "Home")"><i class="bi bi-speedometer2 me-1"></i>Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("VehicleReport", "Home")"><i class="bi bi-bar-chart-line me-1"></i>Report</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

            <!-- Page Content -->
            <div class="container-fluid main-content">
                @if (ViewContext.RouteData.Values["Action"].ToString() != "Index")
                {
                    <div class="d-sm-flex align-items-center justify-content-between mb-4 page-header">
                        <h1 class="h3 mb-0 text-gray-800">@ViewBag.Title</h1>
                        @RenderSection("breadcrumb", required: false)
                    </div>
                }

                @RenderBody()
            </div>

            <!-- Footer -->
            <footer class="text-center">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6 text-md-start">
                            <span class="text-light">&copy; @DateTime.Now.Year - Rosond Vehicle Leasing System</span>
                        </div>
                        <div class="col-md-6 text-md-end">
                            <a href="#" class="text-light me-3"><i class="bi bi-envelope"></i> Support</a>
                            <a href="#" class="text-light me-3"><i class="bi bi-shield-lock"></i> Privacy</a>
                            <a href="#" class="text-light"><i class="bi bi-file-text"></i> Terms</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
        // Activate the current nav item
        $(document).ready(function () {
            var url = window.location;
            $('ul.nav a').filter(function () {
                return this.href == url;
            }).addClass('active-nav');

            // Mobile sidebar toggle
            $('[data-bs-toggle="offcanvas"]').on('click', function () {
                $('.offcanvas-collapse').toggleClass('open');
            });
        });
    </script>
</body>
</html>